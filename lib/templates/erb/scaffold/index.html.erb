<%%= buttons_page_header 'Listando ' << <%= class_name %>.model_name.human(count: 2) do %>
  <%%= glyph_button_to :plus, 'Adicionar ' << <%= class_name %>.model_name.human, new_<%= singular_name %>_path %>
<%% end %>

<table class="table table-striped">
  <tr>
    <%% <%= attributes.map { |attr| attr.name.to_sym }.inspect %>.each do |attribute| -%>
      <th><%%= <%= class_name %>.human_attribute_name(attribute) %></th>
    <%% end -%>
    <th class="span2"></th>
  </tr>

  <%%= content_tag_for :tr, @<%= plural_name %> do |<%= singular_name %>| %>
<% for attribute in attributes -%>
    <td><%%= <%= singular_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td class="actions">
      <%%= link_to glyphicon('eye-open'), <%= singular_name %>, title: "Visualizar" %>
      <%%= link_to glyphicon('pencil'), edit_<%= singular_name %>_path(<%= singular_name %>), title: "Editar" %>
      <%%= link_to glyphicon('trash'), <%= singular_name %>, data: { confirm: 'Tem certeza?' }, method: :delete, title: "Remover" %>
    </td>
  <%% end %>
</table>

<%%= will_paginate @<%= plural_name %> %>
