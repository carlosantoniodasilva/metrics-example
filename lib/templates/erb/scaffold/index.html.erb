<%% title 'Listando ' << <%= class_name %>.model_name.human(:count => 2) do %>
  <%%= link_to 'Adicionar ' << <%= class_name %>.model_name.human, new_<%= singular_table_name %>_path %>
<%% end %>

<%%= render 'shared/sidebar_search' %>

<table class="index">
  <tr>
    <%% <%= attributes.map { |attr| attr.name.to_sym }.inspect %>.each do |attribute| -%>
      <th><%%= <%= class_name %>.human_attribute_name(attribute) %></th>
    <%% end -%>
    <th>&nbsp;</th>
  </tr>

<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <%%= content_tag_for :tr, <%= singular_table_name %> do %>
<% for attribute in attributes -%>
    <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td class="actions">
      <%%= link_to 'Exibir', <%= singular_table_name %>, :class => 'show' %> |
      <%%= link_to 'Editar', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'edit' %> |
      <%%= link_to 'Excluir', <%= singular_table_name %>, :confirm => 'Tem certeza?', :method => :delete, :class => 'destroy' %>
    </td>
  <%% end %>
<%% end %>
</table>

<%%= will_paginate @<%= plural_table_name %> %>
