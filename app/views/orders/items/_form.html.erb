<%= simple_form_for([@order, @item]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :product, collection: Product.active.order(:name) %>
    <%= f.input :quantity %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %> ou <%= link_to 'cancelar', @order, :class => 'cancel' %>
  </div>
<% end %>
