<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :customer, collection: Customer.active.order(:name) %>
    <%= f.input :comments %>
    <%= f.input :completed if @order.persisted? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %> ou <%= link_to 'cancelar', orders_path, :class => 'cancel' %>
  </div>
<% end %>
