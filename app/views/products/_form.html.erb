<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :value %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %> ou <%= link_to 'cancelar', products_path, :class => 'cancel' %>
  </div>
<% end %>
