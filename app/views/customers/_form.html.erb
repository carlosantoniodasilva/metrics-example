<%= simple_form_for(@customer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cpf_cnpj %>
    <%= f.input :name %>
    <%= f.input :active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %> ou <%= link_to 'cancelar', customers_path, :class => 'cancel' %>
  </div>
<% end %>
